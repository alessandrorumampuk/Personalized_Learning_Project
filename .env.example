# =============================================================================
# OpenAI Configuration
# Used for: Realtime API (voice), Embeddings, Whisper transcription
# =============================================================================

# OpenAI API Key - Required for all OpenAI services
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# MinIO Configuration (Video Storage)
# =============================================================================

# MinIO server endpoint (without http:// or https://)
MINIO_ENDPOINT=play.min.io

# MinIO credentials
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key

# Bucket name containing videos
MINIO_BUCKET=physics-videos
MINIO_VIDEOS_PATH=downloads

# Use HTTPS (true/false)
MINIO_SECURE=true

# Maximum videos to process (0 = no limit, will prompt for input)
MAX_VIDEOS=0

# =============================================================================
# Video Data API Configuration
# =============================================================================

# API endpoint to fetch video data JSON
# If not set, will fall back to local data/videos.json file
VIDEO_DATA_API_URL=http://localhost:28302/content/cards/ba7a27624af1511010900f501ddea0b7dacb3d3858ce2291efe45eb4245bdf02/raw
